export ZSH=$HOME/.dotfiles/zsh

# Shell-agnostic preferences

if [ -f $HOME/.profile ]; then
    source $HOME/.profile
fi



# Load zsh highlight

source $ZSH/zsh-highlight/zsh-syntax-highlighting.zsh


# Load zshuery

source $ZSH/zshuery/zshuery.sh
load_defaults
load_aliases
load_completion $ZSH/zshuery/completion
load_correction


# Prompt appearence

vc_info () {
  GIT_BRANCH=$(command git rev-parse --abbrev-ref HEAD 2>/dev/null)
  if [[ -n $GIT_BRANCH ]] then
    if [[ -n $(command git status -s) ]] then
      GIT_STATUS_COLOR=yellow
    else
      GIT_STATUS_COLOR=green
    fi
    echo "(%{$fg_bold[$GIT_STATUS_COLOR]%}$GIT_BRANCH%{$reset_color%})" && return
  fi
}

prompts '%{$fg_bold[green]%}$(COLLAPSED_DIR)%{$reset_color%}$(virtualenv_info) %{$fg[yellow]%}${$(prompt_char)/\$/Î»}%{$reset_color%} ' '%{$fg[red]%}$(ruby_version)%{$reset_color%}'
RPROMPT='$(vc_info)'


# Path & editor choice

if [[ $IS_MAC -eq 1 ]]; then
  # Add OSX default paths
  eval `/usr/libexec/path_helper -s`
  export EDITOR=mvim
else
  export EDITOR=vim
fi


# Load configurations

for file in $ZSH/*.zsh
  source $file

chpwd() {
  update_terminal_cwd
}


# Github alias
eval "$(hub alias -s)"


export PATH=$PATH:$HOME/.dotfiles/bin

if [[ -r $HOME/.zshrc.local ]]; then
  source $HOME/.zshrc.local
fi

