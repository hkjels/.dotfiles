#!/usr/bin/env sh

version="0.0.04"
DOTFILES=$HOME/.dotfiles


usage () {
  cat <<EOF

    Usage: kiss [options] <command>

    Options:
      -h, --help        output usage information
      -v, --version     output version-number

    Commands:
      upgrade           install latest version of KISS dotfiles
      tip               will output a random tip about zsh, git or vim

EOF
}


# Parse arguments

while test $# -ne 0; do
  arg=$1; shift
  case $arg in
    upgrade)
      onlineVersion=$(curl -s https://raw.github.com/hkjels/.dotfiles/master/bin/kiss | sh)
      if [[ $onlineVersion > $version ]]; then
        curl https://raw.github.com/hkjels/.dotfiles/master/install.sh | sh
      else
        echo "\n    KISS is already up to date! ($version)\n"
      fi
      exit
      ;;
    tip)
      echo "\n    You earlybird you! Tips are on itÂ´s way; sorry.\n"
      exit
      ;;
    -v|--version)
      echo $version
      exit
      ;;
    -h|--help)
      usage
      exit
      ;;
  esac
done


echo $version

