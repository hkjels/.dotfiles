[core]
  pager         = most +s +'/---'
  excludesfile  = ~/.gitignore
[alias]
  am       = commit -v --amend
  br       = branch
  branches = branch -a
  ci       = commit -v
  co       = checkout
  d        = diff --word-diff
  lc       = show -s --format= '%ct' HEAD
  lg       = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lp       = log --graph --full-history --all --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s"
  m        = merge
  rb       = rebase
  remotes  = remote -v
  root     = !pwd
  s        = status -s
  sci      = dcommit -v
  sf       = submodule foreach
  srb      = svn rebase
  st       = stash
  sta      = stash apply
  std      = stash drop
  stls     = stash list
  stp      = stash pop
  sts      = stash save
  stu      = stash unstaged
  tags     = tag -l
  undo     = reset --soft HEAD^
  unstage  = reset HEAD --
[diff]
  mnemonicprefix = true
[include]
  path = ~/.gitconfig.local
